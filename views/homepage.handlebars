<div id="accordion">
  {{#each posts as |post|}}
  <div class="card">
    <div class="card-header" id="heading{{post.id}}">
      <h5 class="mb-0">
        <a href="/post/{{post.id}}/comment" style="width: 100%; text-align: left;" class="btn btn-link">
          <div class="col-md-12">
            <h4>{{post.title}}</h4>
            <p>{{post.content}}</p>
            <p style="font-size: 14px;">Created by {{post.user.first_name}} {{post.user.last_name}} on {{format_date post.date_created}}</p>
          </div>
        </a>
      </h5>
    </div>
  </div>
  {{/each}}
</div>
